<div class="table-page">

  <div class="table">
      <div class="headers">
        <h4 class="header-cell header-font content-task-deadline-header">Deadline</h4>
        <h4 class="header-cell header-font content-task-urgent-header">Urgent?</h4>
        <h4 class="header-cell header-font content-task-title-header">Title</h4>
        <h4 class="header-cell header-font content-task-etc-header">Time needed</h4>
        <h4 class="header-cell header-font content-task-owner-header">Owner</h4>
      </div>
        <% @tasks.each do |task| %>
          <div class="row-task">
            <div class="row-cell content-task-deadline task-font"><p><%= task.deadline %></p></div>
            <div class="row-cell content-task-urgent task-font"><input type="checkbox" name="urgent"></div>
            <div class="row-cell content-task-title task-font"><%= task.title %></div>
            <!-- <div class="content-task hidden"><p><%= task.description %></p></div> -->
            <div class="row-cell content-task-etc task-font"><p><%= task.etc %></p></div>
            <div class="row-cell content-task-owner task-font">
            </div>
          </div>
        <% end %>

  </div>
</div>
