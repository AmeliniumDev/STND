  <div class="navbar-collapse">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="">
          <%= link_to "Plan your day", team_tasks_path(current_user.team), class: "links-banner-main link-sm" %>
        </li>
        <!-- AVATAR / USER ICON -->
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
